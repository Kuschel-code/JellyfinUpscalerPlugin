name: ðŸš€ Simple Release Build

on:
  push:
    tags:
      - 'v*'
  workflow_dispatch:

permissions:
  contents: write
  discussions: write
  actions: write

jobs:
  release:
    name: ðŸš€ Create Release
    runs-on: ubuntu-latest
    
    steps:
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4

    - name: ðŸ”§ Setup .NET
      uses: actions/setup-dotnet@v4
      with:
        dotnet-version: '8.0.x'

    - name: ðŸ“¦ Build and Package
      run: |
        # Simple build process
        dotnet restore
        dotnet build --configuration Release
        
        # Create basic package
        mkdir -p dist
        zip -r dist/JellyfinUpscalerPlugin-${GITHUB_REF_NAME}.zip . -x "*.git*" "*.github*" "dist/*"

    - name: ðŸ“‹ Generate Release Notes
      id: release-notes
      run: |
        cat > release-notes.md << EOF
        # ðŸš€ Jellyfin AI Upscaler Plugin ${GITHUB_REF_NAME}
        
        ## âœ… Fixed Issues
        - All installation problems resolved
        - Checksum compatibility fixed
        - Docker container optimizations
        - CasaOS support added
        - ARM64 compatibility improved
        
        ## ðŸ”§ Installation
        
        **Plugin Catalog:**
        \`\`\`
        https://raw.githubusercontent.com/Kuschel-code/JellyfinUpscalerPlugin/main/repository-jellyfin.json
        \`\`\`
        
        **Manual Installation:**
        1. Download ZIP file
        2. Extract to Jellyfin plugins folder
        3. Restart Jellyfin
        
        ## ðŸŒŸ Features
        - 14 AI Models + 7 Shaders
        - 12 Revolutionary Manager Classes
        - Full CasaOS & Docker support
        - ARM64 & Raspberry Pi optimized
        EOF

    - name: ðŸš€ Create GitHub Release
      uses: softprops/action-gh-release@v1
      with:
        name: "ðŸš€ AI Upscaler Plugin ${GITHUB_REF_NAME} - Ultimate Edition"
        body_path: release-notes.md
        draft: false
        prerelease: false
        files: |
          dist/*.zip
        generate_release_notes: true
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}